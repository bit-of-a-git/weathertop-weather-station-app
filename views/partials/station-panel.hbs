<h2 class="title is-4">
  {{title}}
</h2>
<div class="columns">
  <div class="column is-one-fifth">
    <div class="box reading has-background-black has-text-white">
      <div class="columns is-vcentered">
        <div class="column is-two-thirds">
          <div class="title has-text-white is-5">Location</div>
        </div>
        <div class="column">
          <span class="icon is-large">
            {{>icons/location}}
          </span>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <p>Lat: {{latitude}}</p>
          <p>Long: {{longitude}}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="column is-one-fifth">
    <div class="box reading has-background-black has-text-white">
      <div class="columns is-vcentered">
        <div class="column is-two-thirds">
          <div class="title has-text-white is-5">Weather</div>
        </div>
        <div class="column">
          <span class="icon is-large">
            {{#if latestReport.weatherImage}}
            <img src='https://openweathermap.org/img/wn/{{{latestReport.weatherImage}}}@2x.png'>
            {{else}}
            {{>icons/weather-station}}
            {{/if}}
          </span>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <p>{{latestReport.weatherDescription}}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="column is-one-fifth">
    <div class="box reading has-background-black has-text-white">
      <div class="columns is-vcentered">
        <div class="column is-two-thirds">
          <div class="title has-text-white is-5">Temp</div>
        </div>
        <div class="column">
          <span class="icon is-large">
            {{>icons/thermometer}}
          </span>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <p>Currently {{#if latestReport.currentCelsius}}
          {{latestReport.currentCelsius}}째C/{{latestReport.currentFahrenheit}}째F</p>{{/if}}
          <p>Max: {{#if analytics.maxTemp}}{{analytics.maxTemp}}째C</p>{{/if}}
          <p>Min: {{#if analytics.minTemp}}{{analytics.minTemp}}째C</p>{{/if}}
        </div>
      </div>
    </div>
  </div>
  <div class="column is-one-fifth">
    <div class="box reading has-background-black has-text-white">
      <div class="columns is-vcentered">
        <div class="column is-two-thirds">
          <div class="title has-text-white is-5">Wind</div>
        </div>
        <div class="column">
          <span class="icon is-large">
            {{>icons/wind}}
          </span>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          {{#if latestReport.windSpeedInBeaufort}}
          <p>{{latestReport.windSpeedInBeaufort}} bft</p>
          {{/if}}
          {{#if latestReport.windDirection}}
          <p>{{latestReport.windDirection}}</p>
          {{/if}}
          {{#if feelsLike}}
          <p>Feels like?</p>
          {{/if}}
          <p>Max: {{#if analytics.maxWind}}{{analytics.maxWind}}km/h</p>{{/if}}
          <p>Min: {{#if analytics.minWind}}{{analytics.minWind}}km/h</p>{{/if}}
        </div>
      </div>
    </div>
  </div>
  <div class="column is-one-fifth">
    <div class="box reading has-background-black has-text-white">
      <div class="columns is-vcentered">
        <div class="column is-two-thirds">
          <div class="title has-text-white is-5">Pressure</div>
        </div>
        <div class="column">
          <span class="icon is-large">
            {{>icons/pressure}}
          </span>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <p>Currently: {{#if latestReport.currentPressure}}
            {{latestReport.currentPressure}} hpa</p>{{/if}}
          <p>Max: {{#if analytics.maxPressure}}{{analytics.maxPressure}} hpa</p>{{/if}}
          <p>Min: {{#if analytics.minPressure}}{{analytics.minPressure}} hpa</p>{{/if}}
        </div>
      </div>
    </div>
  </div>
</div>