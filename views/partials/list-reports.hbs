<div class="box">
  <div class="title is-4">Reports List</div>
  <table class="table is-fullwidth is-bordered">
    <thead class="has-background-light">
      <tr>
        <th>Date/Time</th>
        <th>Code</th>
        <th>Temp</th>
        <th>Wind Speed</th>
        <th>Wind Direction</th>
        <th>Pressure</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each (reverseArray station.reports)}}
      <tr>
        <td>{{unixTimeToStandard timestamp}}</td>
        <td>{{code}}</td>
        <td>{{temp}}</td>
        <td>{{windSpeed}}</td>
        <td>{{windDirection}}</td>
        <td>{{pressure}}</td>
        <td>
          <a href="/station/{{../station._id}}/delete-report/{{_id}}" class="button is-danger">
            {{>icons/delete}}
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
